{% extends 'base.html.twig' %}

{% block title %}Mon abonnement{% endblock %}

{% block content %}

    <a href="{{ path('subscribe') }}" class="btn btn-outline-info float-right font-helvetica-thin" title="S'abonner">Je m'abonne</a>

    <h1 class="font-allura">Mon abonnement</h1>

    <p class="font-helvetica-thin">C'est dans cet espace que vous allez pouvoir
        gérer les informations liées à votre abonnement. </p>
    <a href="{{ path('account') }}" class="hvr-icon-back"><i class="fa fa-chevron-circle-left hvr-icon"></i> Retour</a>


    <hr>

    {% if app.user.subscription|length == 0 %}
        <p class="text-center">
            Vous n'avez pas encore d'abonnement.
            <a href="{{ path('subscribe') }}" title="S'abonner"> cliquez-ici </a>pour vous abonner.</p>
    {% else %}
        <div class="row">
            <div class="col-md-4">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ app.user.subscription.name }}</h5>
                        <p class="card-text font-helvetica-thin">
                            {{ app.user.subscription.description|raw }}<br>
                            {{ app.user.subscription.price }} € / mois
                        </p>
                        <a href="#" title="Modifier l'abonnement">Modifier</a> | <a href="" title="Supprimer l'abonnement">Supprimer</a>
                    </div>
                </div>
            </div>


        </div>

    {% endif %}


{% endblock %}
