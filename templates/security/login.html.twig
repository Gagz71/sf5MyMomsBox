{% extends 'base.html.twig' %}

{% block title %}Connexion à mon compte{% endblock %}

{% block content %}
    <h1 class="mb-3 font-weight-normal text-center font-allura">Connectez-vous à votre espace My Mom's Box</h1>

    <div>
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes déjà connecté {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="form-group text-center font-helvetica-thin">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control-sm" required autofocus>
            </div>
            <div class="form-group text-center font-helvetica-thin">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control-sm" required>
            </div>



            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}">

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <div class="form-group text-center">
                <button class="btn btn-sm btn-outline-primary" type="submit">
                    Je me connecte
                </button>
                <hr>
                <p class="font-helvetica-thin">Pas encore de compte ?<br>
                    <a href="{{ path('app_register') }}">Je me créer un compte</a>  </p>
            </div>

        </form>
    </div>

{% endblock %}
