{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse{% endblock %}
 {% block stylesheets %}
     <link rel="stylesheet" href="{{ asset('assets/css/style-delivery-subscribe.css') }}">
 {% endblock %}

{% block content %}
    <div class="container-fluid pt-5">

        <div class="row" id="">

            <div class="col-12 m-auto text-center">
                <h1 class="font-allura delivery-title">Ajouter une adresse de livraison</h1>
                <hr class="style-hr-1">
            </div>


        </div>



        <a href="{{ path('account_address') }}" class="hvr-icon-back"><i class="fa fa-chevron-circle-left hvr-icon"></i> Retour</a>




        <div class="container-fluid mt-5">
            {{ form_start(form) }}
            <div class="row m-auto">
                <div class="col-md-10">{{ form_row(form.name) }}</div>
            </div>

                <div class="row m-auto">
                    <div class="col-md-5">{{ form_row(form.firstname) }}</div>
                    <div class="col-md-5 ">{{ form_row(form.lastname) }}</div>
                </div>

                <div class="row m-auto">
                    <div class="col-md-10">{{ form_row(form.company) }}</div>
                </div>

            <div class="row m-auto">
                <div class="col-md-10">{{ form_row(form.address) }}</div>
            </div>

            <div class="row m-auto">
                <div class="col-md-3">{{ form_row(form.zipCode) }}</div>
                <div class="col-md-4">{{ form_row(form.city) }}</div>
                <div class="col-md-3">{{ form_row(form.country) }}</div>
            </div>

            <div class="row m-auto">
                <div class="col-md-6">{{ form_row(form.phone) }}</div>
            </div>

            <div class="row m-auto">
                <div class="col-md-6 button ">{{ form_row(form.submit) }}</div>
            </div>

                {{ form_end(form) }}
            </div>

        </div>


    </div>




{% endblock %}
