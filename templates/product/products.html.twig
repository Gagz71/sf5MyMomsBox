{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}



{% block content %}




    <div class="row">
        <div class="col-md-2">
            <h5 class="font-helvetica-bold">FILTRER</h5>
            {{ form(form) }}
        </div>
        <div class="col-md-10">
            <h3 class="text-center font-allura h1-products">Nos Produits</h3>
            <div class="row ">

                {% for product in products %}

                    <div class="col-3 mb-4 gold-shadow anim-card">
                        <div class="card h-100 product-item text-center overlay">
                            <a href="{{ path('product', {'slug' : product.slug}) }}"><img src="/uploads/files/{{ product.illustration }}" alt="illustration {{ product.name }}" class="card-img-top"></a>
                            <div class="card-body">
                                <h5 class="card-title">{{ product.name }}</h5>
                                <p class="card-text product-subtitle">{{ product.subtitle }}</p>
                                <footer class="blockquote-footer product-price">{{ (product.price / 100)|number_format(2) }}â‚¬</footer>
                            </div>
                            <div class="card-footer">
                                <div class="svg-wrapper">
                                    <svg height="40" width="120" xmlns="http://www.w3.org/2000/svg">
                                        <rect class="shape" height="40" width="120" />
                                        <div class="text"><a href="{{ path('product', {'slug' : product.slug}) }}" title="Voir le produit">En savoir plus</a></div>
                                    </svg>
                                </div>
                            </div>


                        </div>
                    </div>

                {% endfor %}
            </div>
        </div>
    </div>


{% endblock %}


