{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}


{% block content %}

    <h1 class="text-center font-allura h1-products">{{ product.name }}</h1>

    <a href="{{ path('products') }}" class="hvr-icon-back"><i class="fa fa-chevron-circle-left hvr-icon"></i> Retour</a>


    <div class="row">
        <div class="col-md-5">
            <img src="/uploads/files/{{ product.illustration }}" class="img-fluid" alt="{{ product.name }}">
        </div>
        <div class="col-md-7 my-auto">

                <p class="product-one-subtitle">{{ product.subtitle }}</p>
                <p class="product-one-price">{{ (product.price / 100)|number_format(2) }}â‚¬</p>
                <hr>
                <p class="product-description">{{ product.description }}</p>

                <a href="{{ path('add_to_cart', {'id': product.id}) }}" class="font-helvetica-thin btn-add-cart border-animation" title="ajouter au panier">
                    <div class="border-animation__inner">
                        Ajouter au panier
                        <img src="{{ asset('assets/img/icons8-ajouter-au-panier-32.png') }}" alt="Ajouter au panier" height="20" width="20">
                    </div>
                </a>

        </div>
    </div>
{% endblock %}
