{% extends 'base.html.twig' %}

{% block title %}Je commande{% endblock %}

{% block content %}

    <h1 class="font-allura text-center">Je passe commande</h1>

    <h5 class="font-helvetica-bold">Je choisis mes préférences avant de valider ma commande My Mom's Box</h5>
    <hr>
    <div class="row font-allura">
        <div class="col-md-6">
            <div class="font-helvetica-thin">
                {% set formHtml %}
                    {{ form_start(form, {action:path('order_recap')}) }}

                    <small><a href="{{ path('account_address_add') }}" title="Ajouter une nouvelle adresse">Ajouter une nouvelle adresse</a></small>

                    {{ form_end(form) }}
                {% endset %}


                {{ formHtml|replace({'[br]' : '<br/>'})|raw }}
            </div>


        </div>
        <div class="col-md-6">
            <div class="text-center">
                Récapitulatif de ma commande
            </div>

            <div class="order-summary">
                {% for key,product in cart %}
                    <div class="row font-helvetica-thin {% if key > 0 %}mt-2{% endif %}">
                        <div class="col-2">
                            <img src="/uploads/files/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="75px">
                        </div>
                        <div class="col-8 my-auto font-helvetica-bold">
                            {{ product.product.name }} <br>
                            <small class="font-helvetica-thin">{{ product.product.subtitle }}</small>
                        </div>
                        <div class="col-2 my-auto">
                            x {{ product.quantity }}
                        </div>
                    </div>

                {% endfor %}

            </div>


        </div>
    </div>

{% endblock %}
